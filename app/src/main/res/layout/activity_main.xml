<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009978"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Login CHATados"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/campoIpId"
        android:layout_toStartOf="@+id/campoIpId"
        android:text="IP:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/campoIpId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/campoUsuarioId"
        android:layout_alignEnd="@+id/textView3"
        android:text="Usuario:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/campoUsuarioId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/campoIpId"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/campoSenhaId"
        android:layout_alignEnd="@+id/textView3"
        android:text="Senha:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/campoSenhaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <Button
        android:id="@+id/botaoEsquciId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="esqueci senha" />

    <Button
        android:id="@+id/botaoCadastrarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_centerVertical="true"
        android:text="Cadastrar" />

    <Button
        android:id="@+id/botaoLoginId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/botaoCadastrarId"
        android:layout_marginEnd="53dp"
        android:text="Login" />

</RelativeLayout>